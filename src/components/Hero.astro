<section class="relative min-h-screen flex items-center pt-16">
	<!-- Background decoration -->
	<div class="absolute top-1/4 right-0 w-96 h-96 bg-[--color-avoqado-green] rounded-full opacity-20 blur-3xl"></div>

	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
			<!-- Left Column - Content -->
			<div class="space-y-8">
				<h1 class="text-5xl md:text-6xl lg:text-7xl font-semibold leading-tight">
					The payment methods built for <span class="text-[--color-avoqado-green]">restaurants</span>.
				</h1>

				<p class="text-xl text-gray-400 max-w-lg">
					Payment solutions designed for the world's best restaurants. Simplify operations, enhance customer experience.
				</p>

				<div class="flex flex-col sm:flex-row gap-4">
					<a
						href="#get-started"
						class="inline-block px-8 py-4 bg-[--color-avoqado-green] text-white text-lg font-semibold rounded-full hover:opacity-90 transition-opacity text-center"
					>
						PAY THE BILL
					</a>
					<a
						href="#demo"
						class="inline-block px-8 py-4 border-2 border-[--color-avoqado-green] text-[--color-avoqado-green] text-lg font-semibold rounded-full hover:bg-[--color-avoqado-green] hover:text-white transition-all text-center"
					>
						See Demo
					</a>
				</div>

				<!-- Features Quick List -->
				<div class="grid grid-cols-3 gap-8 pt-8 border-t border-gray-800">
					<div class="text-center">
						<div class="text-4xl font-bold text-[--color-avoqado-green]">Q</div>
						<p class="text-sm text-gray-400 mt-2">Scan & View</p>
					</div>
					<div class="text-center">
						<div class="text-4xl font-bold text-[--color-avoqado-green]">$</div>
						<p class="text-sm text-gray-400 mt-2">Pay & Tip</p>
					</div>
					<div class="text-center">
						<div class="text-4xl font-bold text-[--color-avoqado-green]">ðŸ“±</div>
						<p class="text-sm text-gray-400 mt-2">Receipt & Review</p>
					</div>
				</div>
			</div>

			<!-- Right Column - Visual -->
			<div class="relative">
				<!-- Placeholder for hero image/mockup -->
				<div class="relative z-10">
					<div class="bg-white rounded-3xl shadow-2xl p-8 border border-gray-100">
						<!-- Mobile mockup placeholder -->
						<div class="aspect-[9/16] max-w-sm mx-auto bg-gradient-to-br from-[--color-avoqado-green] to-[--color-avoqado-light] rounded-2xl flex items-center justify-center">
							<div class="text-center space-y-4">
								<div class="w-24 h-24 mx-auto rounded-full bg-white flex items-center justify-center shadow-lg">
									<div class="w-16 h-16 rounded-full bg-[--color-avoqado-green] flex items-center justify-center">
										<div class="w-8 h-8 rounded-full bg-[--color-avoqado-orange]"></div>
									</div>
								</div>
								<p class="text-white font-semibold text-lg">Avoqado App</p>
							</div>
						</div>
					</div>
				</div>

				<!-- Background decoration -->
				<div class="absolute -bottom-8 -left-8 w-64 h-64 bg-[--color-avoqado-orange] rounded-full opacity-10 blur-2xl"></div>
			</div>
		</div>
	</div>
</section>
