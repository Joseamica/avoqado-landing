---
export interface Props {
	name: string;
	size?: 'sm' | 'md' | 'lg' | 'xl';
	class?: string;
	ariaHidden?: boolean;
}

const {
	name,
	size = 'md',
	class: className = '',
	ariaHidden = true,
	...rest
} = Astro.props;

const sizeStyles = {
	sm: 'w-4 h-4',
	md: 'w-6 h-6',
	lg: 'w-8 h-8',
	xl: 'w-12 h-12',
};

const classes = `${sizeStyles[size]} ${className}`;

