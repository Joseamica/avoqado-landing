---
import '../styles/global.css';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Regístrate - Avoqado</title>
        <link rel="icon" type="image/png" href="/favicon.png" />
	</head>
	<body class="bg-white m-0 p-0 w-full min-h-screen">
		<div class="min-h-screen flex">
			<!-- Left Side - Black with branding -->
			<div class="hidden lg:flex lg:w-1/2 bg-black flex-col justify-center items-center p-12 relative overflow-hidden">
				<div class="text-center z-10">
					<img src="/imagotipo-white.png" alt="Avoqado" class="h-16 mb-6 mx-auto" />
					<p class="text-gray-400 text-xl">Comienza gratis</p>
				</div>
				<!-- Optional: Add background pattern or image -->
			</div>

			<!-- Right Side - White with simple form -->
			<div class="w-full lg:w-1/2 bg-white flex items-center justify-center p-8">
				<div class="w-full max-w-md">
					<!-- Logo -->
					<div class="mb-8">
						<a href="/" class="inline-block">
							<img src="/imagotipo.png" alt="Avoqado" class="h-10" />
						</a>
					</div>

					<!-- Title -->
					<h2 class="text-4xl font-bold text-black mb-2 leading-tight">Let's create your account</h2>
					<p class="text-gray-600 mb-8 leading-relaxed">Signing up for Avoqado is fast and free—no commitments or long-term contracts.</p>

					<!-- Form -->
					<form class="space-y-4">
						<!-- Email -->
						<div>
							<input
								type="email"
								id="email"
								name="email"
								required
								class="w-full px-4 py-3 border border-gray-300 rounded-lg text-black placeholder-gray-400 focus:border-blue-600 focus:ring-2 focus:ring-blue-600 outline-none transition-all"
								placeholder="Email"
							/>
						</div>

						<!-- Password -->
						<div class="relative">
							<input
								type="password"
								id="password"
								name="password"
								required
								class="w-full px-4 py-3 border border-gray-300 rounded-lg text-black placeholder-gray-400 focus:border-blue-600 focus:ring-2 focus:ring-blue-600 outline-none transition-all"
								placeholder="Password"
							/>
						</div>

						<!-- Locale Selector -->
						<div class="relative">
							<select
								id="locale"
								name="locale"
								required
								class="w-full px-4 py-3 border border-gray-300 rounded-lg text-black focus:border-blue-600 focus:ring-2 focus:ring-blue-600 outline-none transition-all appearance-none bg-white"
							>
								<option value="">Locale</option>
								<option value="mx">Mexico (Español)</option>
								<option value="us">United States (English)</option>
								<option value="es">España (Español)</option>
							</select>
							<div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none">
								<svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
								</svg>
							</div>
						</div>

						<!-- Terms Checkbox -->
						<div class="flex items-start py-2">
							<input
								type="checkbox"
								id="terms"
								name="terms"
								required
								class="mt-1 h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600"
							/>
							<label for="terms" class="ml-3 text-sm text-gray-600 leading-relaxed">
								I agree to Avoqado's <a href="#" class="text-black underline hover:no-underline">Terms</a>, <a href="#" class="text-black underline hover:no-underline">Privacy Policy</a>, and <a href="#" class="text-black underline hover:no-underline">E-Sign Consent</a>
							</label>
						</div>

						<!-- Submit Button -->
						<button
							type="submit"
							class="w-full bg-blue-600 text-white font-semibold py-3.5 rounded-lg hover:bg-blue-700 transition-colors text-base mt-2"
						>
							Create account
						</button>

						<!-- Sign In Link -->
						<p class="text-center text-sm text-gray-600 pt-4">
							Already have a Avoqado account? <a href="#" class="text-blue-600 hover:underline font-semibold">Sign in</a>.
						</p>

						<!-- Footer Text -->
						<p class="text-xs text-gray-500 pt-6 leading-relaxed">
							This site is protected by reCAPTCHA Enterprise and the Google <a href="#" class="underline hover:no-underline">Privacy Policy</a> and <a href="#" class="underline hover:no-underline">Terms of Service</a> apply.
						</p>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>
