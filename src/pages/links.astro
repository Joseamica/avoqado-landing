---
import Layout from '../layouts/Layout.astro';
---

<Layout
	title="Avoqado - Demos & Links"
	description="Explora todas las demos y productos de Avoqado - Soluciones de pago para restaurantes"
>
	<main class="min-h-screen flex items-center justify-center px-4 py-16 relative overflow-hidden">
		<!-- Animated diagonal lines background -->
		<div class="diagonal-lines-container">
			<div class="diagonal-line diagonal-line-1"></div>
			<div class="diagonal-line diagonal-line-2"></div>
			<div class="diagonal-line diagonal-line-3"></div>
			<div class="diagonal-line diagonal-line-4"></div>
			<div class="diagonal-line diagonal-line-5"></div>
			<div class="diagonal-line diagonal-line-6"></div>
			<div class="diagonal-line diagonal-line-7"></div>
			<div class="diagonal-line diagonal-line-8"></div>
		</div>

		<!-- Background decorations -->
		<div class="absolute top-1/4 right-0 w-96 h-96 bg-[--color-avoqado-green] rounded-full opacity-10 blur-3xl"></div>
		<div class="absolute bottom-1/4 left-0 w-96 h-96 bg-[--color-avoqado-orange] rounded-full opacity-10 blur-3xl"></div>

		<div class="max-w-2xl w-full relative z-10">
			<!-- Logo/Brand Section -->
			<div class="text-center mb-12">
				<div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-gradient-to-br from-[--color-avoqado-green] to-[--color-avoqado-orange] mb-6 shadow-2xl">
					<div class="w-16 h-16 rounded-full bg-[--color-avoqado-dark-bg] flex items-center justify-center">
						<div class="w-8 h-8 rounded-full bg-[--color-avoqado-green]"></div>
					</div>
				</div>
				<h1 class="text-4xl md:text-5xl font-bold mb-3">
					Avoqado
				</h1>
				<p class="text-xl text-gray-400">
					Demos & Experiencias Interactivas
				</p>
			</div>

			<!-- Links Container -->
			<div class="space-y-3">
				<!-- QR Payment Demo -->
				<a
					href="https://avoqado.io"
					target="_blank"
					rel="noopener noreferrer"
					class="group block w-full px-6 py-5 bg-[--color-avoqado-dark-surface] border border-gray-800 rounded-xl hover:border-[--color-avoqado-green] hover:bg-[--color-avoqado-dark-bg] transition-all duration-200"
				>
