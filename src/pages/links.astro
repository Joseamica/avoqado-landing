</Layout>

<style>
	/* Diagonal lines animation */
	.diagonal-lines-container {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		overflow: hidden;
		pointer-events: none;
		opacity: 0.4;
	}

	.diagonal-line {
		position: absolute;
		width: 2px;
		height: 200%;
		transform-origin: center;
		transform: rotate(-45deg);
		opacity: 0;
		animation: moveDiagonal 15s linear infinite;
	}

	/* Alternating green and orange colors */
	.diagonal-line-1 {
		background: linear-gradient(to bottom, transparent, var(--color-avoqado-green), transparent);
		left: 0%;
		animation-delay: 0s;
	}

	.diagonal-line-2 {
		background: linear-gradient(to bottom, transparent, var(--color-avoqado-orange), transparent);
		left: 12.5%;
		animation-delay: 2s;
	}

	.diagonal-line-3 {
		background: linear-gradient(to bottom, transparent, var(--color-avoqado-green), transparent);
		left: 25%;
		animation-delay: 4s;
	}

	.diagonal-line-4 {
		background: linear-gradient(to bottom, transparent, var(--color-avoqado-orange), transparent);
		left: 37.5%;
		animation-delay: 6s;
	}

	.diagonal-line-5 {
		background: linear-gradient(to bottom, transparent, var(--color-avoqado-green), transparent);
		left: 50%;
		animation-delay: 8s;
	}

	.diagonal-line-6 {
		background: linear-gradient(to bottom, transparent, var(--color-avoqado-orange), transparent);
		left: 62.5%;
		animation-delay: 10s;
	}

	.diagonal-line-7 {
		background: linear-gradient(to bottom, transparent, var(--color-avoqado-green), transparent);
		left: 75%;
		animation-delay: 12s;
	}

	.diagonal-line-8 {
		background: linear-gradient(to bottom, transparent, var(--color-avoqado-orange), transparent);
		left: 87.5%;
		animation-delay: 14s;
	}

	@keyframes moveDiagonal {
		0% {
			top: -100%;
			opacity: 0;
		}
		10% {
			opacity: 0.6;
		}
		50% {
			opacity: 0.3;
		}
		90% {
			opacity: 0.1;
		}
		100% {
			top: 100%;
			opacity: 0;
		}
	}

	/* Custom animations */
	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.max-w-2xl {
		animation: fadeIn 0.6s ease-out;
	}

	/* Stagger animation for links */
	.space-y-3 > a {
		animation: fadeIn 0.6s ease-out backwards;
	}

	.space-y-3 > a:nth-child(1) {
		animation-delay: 0.1s;
	}

	.space-y-3 > a:nth-child(2) {
		animation-delay: 0.2s;
	}

	.space-y-3 > a:nth-child(3) {
		animation-delay: 0.3s;
	}

	.space-y-3 > a:nth-child(4) {
		animation-delay: 0.4s;
	}

	/* Reduce motion for users who prefer it */
	@media (prefers-reduced-motion: reduce) {
		.diagonal-line {
			animation: none;
			display: none;
		}
	}
</style>
